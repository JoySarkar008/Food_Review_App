<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <android.support.v7.widget.CardView
        android:id="@+id/recycle_card"
        android:layout_width="347dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="#F4F4F0"
            android:layout_marginTop="4.5dp"
            app:cardCornerRadius="3dp"

            >
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="118dp"
                android:layout_height="115dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/aa"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.106"
                tools:srcCompat="@tools:sample/avatars" />
        </android.support.v7.widget.CardView>



        <RelativeLayout
            android:layout_width="135dp"
            android:layout_height="120dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/product_name"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Chicken Tanduri"
                android:textColor="#61A503"
                android:gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/product_details"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Chicken Vaja with sauces and onions"
                android:gravity="center"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="$ 8.00"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="5dp"
                />
        </RelativeLayout>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/up"
            />



        <ImageButton
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/down"
            />
        <TextView
            android:id="@+id/upVoteCount"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="650"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#61A503"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/totalVoteCount"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="700"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#61A503"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="66dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/downVoteCount"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="50"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#F32108"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="5dp"
            />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/loginpageviewbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycle_card"
        app:layout_constraintVertical_bias="0.293" />

    <Button
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginpageviewbutton"
        app:layout_constraintVertical_bias="0.196" />

</android.support.constraint.ConstraintLayout>